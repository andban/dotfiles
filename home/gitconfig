[user]
  name = Andreas Bannach
  email = andreas@borntohula.de

[core]
  editor = vim
  excludesfile = /Users/andreas/.gitignore_global

[alias]
  # remove tracking of references removed on remote
  prune = fetch --prune

  # reset last commit
  undo = reset --soft HEAD^

  # stash ALL changes
  stash-all = stash save --include-untracked

[merge]
  # only allow fast-forward merges (those without merge commit)
  ff = only

  # show common ancestors in conflict
  conflictstyle = diff3

[push]
  default = simple
  followTags = true

[log]
  # show only mgmt version
  abbrevCommit = true

[format]
  # make it pretty
  pretty = %Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset
  graph = true

[status]
  # show contents of untracked folders
  showUntrackedFiles = all

[color]
  ui = true

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[diff]
  tool = icdiff

[difftool]
  prompt = false

[difftool "icdiff"]
  cmd = icdiff --line-numbers $LOCAL $REMOTE

[advice]
  statusHints = false

[github]
  user = andban

[url "git@github.com:"]
  insteadOf = "gh://"
  pushInsteadOf = "gh://"
  pushInsteadOf = "git://github.com/"

